<% if notice.present? %>
  <p class="mb-4 p-2 text-green-800 bg-green-100 rounded"><%= notice %></p>
<% end %>

<%= render @todo %>

<div class="mt-4 space-x-2">
  <%= link_to "Edit this todo", edit_todo_path(@todo), class: "text-blue-600 hover:underline" %>
  <span>|</span>
  <%= link_to "Back to todos", todos_path, class: "text-blue-600 hover:underline" %>

  <%= button_to "Destroy this todo", @todo, method: :delete, class: "ml-4 bg-red-600 text-white px-3 py-1 rounded" %>
</div>
