<% if notice.present? %>
  <p class="mb-4 p-2 text-green-800 bg-green-100 rounded"><%= notice %></p>
<% end %>

<% content_for :title, "Todos" %>

<h1 class="text-2xl font-bold mb-6">Todos</h1>

<div id="todos" class="space-y-4">
  <% @todos.each do |todo| %>
    <%= render todo %>
    <p class="mt-2">
      <%= link_to "Show this todo", todo, class: "text-blue-600 hover:underline" %>
    </p>
  <% end %>
</div>

<%= link_to "New todo", new_todo_path, class: "inline-block mt-6 bg-blue-600 text-white px-4 py-2 rounded" %>
