<%= form_with(model: todo, class: "space-y-4") do |form| %>
  <% if todo.errors.any? %>
    <div class="mb-4 text-red-600">
      <h2 class="font-bold"><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul class="list-disc list-inside">
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block font-medium text-gray-700" %>
    <%= form.text_field :title, class: "mt-1 block w-full border-gray-300 rounded-md" %>
  </div>

  <div class="flex items-center gap-2">
    <%= form.checkbox :completed, class: "rounded border-gray-300" %>
    <%= form.label :completed, class: "font-medium text-gray-700" %>
  </div>

  <div>
    <%= form.submit class: "bg-blue-600 text-white px-4 py-2 rounded" %>
  </div>
<% end %>
